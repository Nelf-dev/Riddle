
<h1 class="bouncingheadings">Sign Up!</h1>

<div class="error">
    <% if @user.errors.any? %>
        <ol>
            <% @user.errors.full_messages.each do |msg| %>
                <h2><%= msg %></h2>
            <% end %>
        </ol>
    <% end %>
</div>


<%= form_for @user do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    
    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :confirm_password %>
    <br>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Sign Up" , :class => "postbutton" %>

<% end %>
