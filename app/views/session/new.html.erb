<h1 class="bouncingheadings">Log in</h1>

<% if flash[:error].present? %> 
    <h2><%= flash[:error] %></h2>
<% end %>

<%= form_tag login_path, :id => 'new_user' do %>
    <%= label_tag :email %>
    <%= email_field_tag :email %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= submit_tag "Sign in", :class => "postbutton" %>
<% end %>

